@using System.Data
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@(ViewBag.Title ?? "IsMatch")</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/Content/layui/css/layui.css">
    <link rel="stylesheet" href="~/Content/static/css/mian.css">
    @RenderSection("Styles", false)
</head>
<body class="lay-blog">
    <div class="header">
        <div class="header-wrap">
            <h1 class="logo pull-left">
                <a href="/">
                    <img src="~/Content/static/images/logo.png" alt="" class="logo-img">
                    <img src="~/Content/static/images/logo-text.png" alt="" class="logo-text">
                </a>
            </h1>
            <form class="layui-form blog-seach pull-left" action="">
                <div class="layui-form-item blog-sewrap">
                    <div class="layui-input-block blog-sebox">
                        <i class="layui-icon layui-icon-search"></i>
                        <input type="text" name="title" lay-verify="title" autocomplete="off" class="layui-input">
                    </div>
                </div>
            </form>
            <div class="blog-nav pull-right">
                <ul class="layui-nav pull-left">
                    <li class="layui-nav-item layui-this"><a href="/">首页</a></li>
                    @{
                        var catalogs = ViewBag.Catalogs;
                        if (catalogs != null)
                        {
                            foreach (DataRow item in catalogs.Rows)
                            {
                                <li class="layui-nav-item"><a href="/catalog/@item["Url"]">@item["Title"]</a></li>
                            }
                        }
                    }
                </ul>
                <a href="#" class="personal pull-left">
                    <i class="layui-icon layui-icon-username"></i>
                </a>
            </div>
            <div class="mobile-nav pull-right" id="mobile-nav">
                <a href="javascript:;">
                    <i class="layui-icon layui-icon-more"></i>
                </a>
            </div>
        </div>
        <ul class="pop-nav" id="pop-nav">
            <li><a href="/">首页</a></li>
            @{
                if (catalogs != null)
                {
                    foreach (DataRow item in catalogs.Rows)
                    {
                        <li class="layui-nav-item"><a href="@Url.Action("catalog","",new { id = item["Url"]})">@item["Title"]</a></li>
                    }
                }
            }
        </ul>
    </div>
    @RenderBody()
    <div class="footer">
        <p>
            <span>&copy; 2018</span>
            <span><a href="http://www.layui.com" target="_blank">layui.com</a></span>
            <span>MIT license</span>
        </p>
        <p><span>人生就是一场修行</span></p>
    </div>
    <script src="~/Content/layui/layui.js"></script>
    <script>
        layui.config({
            base: '/Content/static/js/'
        }).use('blog');
    </script>
    @RenderSection("Scripts", false)
</body>
</html>